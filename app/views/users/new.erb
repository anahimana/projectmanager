<h1 class="text-center">Sign Up</h1>

<% if @user && @user.invalid? %>
<ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>
<div class="container mx-auto text-center">
  <form class="register" action="/users" method="post">
    <div class="my-3">
      <input type="email" class="text-center" id="email" placeholder="Email" name="user[email]" required>
    </div>
    <div class="mb-3">
      <input type="password" class="text-center" id="passsword" placeholder="Password" name="user[password]" required>
    </div>
    <div class="my-3">
      <input type="password" class="text-center" id="confirm-password" placeholder="Confirm Password" name="user[password_confirmation]" required>
    </div>
    <input type="submit" name="submit" value="submit">
  </form>
</div>

<p class="text-center mt-3">Already have an account? <a href="/login">Login</a></p>
