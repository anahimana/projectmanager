<div class="container">
  <!-- New Project Form -->
  <form action="/projects" method="post">
    <div class="form-group">
      <label for="project-name">Project Name</label>
      <input type="text" class="form-control" id="project-name" name="project[name]" required>
    </div>
    <div class="form-group">
    <label for="project-description">Project Description</label>
    <textarea class="form-control" name="project[description]" id="project-description" rows="3" required></textarea>
  </div>
    <button type="submit" class="btn btn-primary mb-3">Submit</button>
  </form>

  <!-- Projects Table -->
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Owner</th>
        <th scope="col">Date Created</th>
        <th scope="col">Last Modified</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each_with_index do |project, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><a href="/projects/<%= project.id%>"><%= project.name%></a></td>
        <td><%= project.user.full_name %></td>
        <td><%= project.created_at %></td>
        <td><%= project.updated_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
