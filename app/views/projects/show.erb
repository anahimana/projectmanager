<% if @project.nil? %>
  <p>Project does not exist...</p>
<% else %>
<div class="project">
  <h1><%= @project.name %></h1>
  <p><strong>Description</strong>: <%= @project.description %></p>
  <p><strong>Crated Date Time</strong>: <%= @project.created_at %></p>
  <p><strong>Last Modified Date Time</strong>: <%= @project.updated_at %></p>
</div>
<div class="actions">
  <form id="delete" method="post">
    <input type="hidden" name="_method" value="DELETE">
  </form>
  <ul>
    <li><a href="/projects/<%= @project.id %>/edit">Update</a></li>
    <li>
      <button type="submit" form="delete" formaction="/projects/<%= @project.id %>/delete" name="delete">Delete</button>
    </li>
  </ul>
</div>
<% end %>
