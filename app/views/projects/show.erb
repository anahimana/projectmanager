<% if @project.nil? %>
  <p class="tex-tecter">Project does not exist...</p>
<% else %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @project.name %></h5>
    <p class="card-text"><%= @project.description %></p>
    <a href="/projects" class="card-link">Back to Projects</a>
    <a href="/projects/<%= @project.id %>/edit" class="card-link">Update</a>
    <button type="button" id="btn-dlt" class="btn btn-primary">Delete</button>
    <button type="button" id="btn-gbk" class="btn btn-primary">Go Back</button>
  </div>
</div>
<% end %>
