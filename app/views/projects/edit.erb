<% if @project.nil? %>
  <p>Project does not exist...</p>
<% else %>
  <form class="project-form" id="create" action="/projects/<%= @project.id %>/edit" method="post">
    <div>
      <label for="project-name">Project Name</label>
      <input type="text" id="project-name" name="project[name]" value="<%= @project.name %>" required>
    </div>

    <div>
      <label for="project-description">Project Description</label>
      <textarea id="project-description" name="project[description]" rows="5" cols="33" required><%= @project.description %>
      </textarea>
    </div>

    <div>
      <input type="hidden" name="_method" value="PUT">
    </div>
    <div>
      <input type="submit" name="submit" value="submit">
    </div>
  </form>
<% end %>
